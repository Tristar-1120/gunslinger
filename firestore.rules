rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Users collection
    match /users/{userId} {
      // Allow reading individual user documents
      allow get: if true;
      // Allow querying/listing users (for username login and friend search)
      allow list: if true;
      // Allow creating own user document
      allow create: if request.auth != null && request.auth.uid == userId;
      // Allow updating own document OR if admin OR if updating friends array (for friend requests)
      allow update: if request.auth != null && 
                      (request.auth.uid == userId || 
                       isAdmin() ||
                       // Allow updating friends array when accepting friend requests
                       (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['friends'])));
      // Allow deleting own document or if admin
      allow delete: if request.auth != null && (request.auth.uid == userId || isAdmin());
    }
    
    // Matches collection - stores individual match results
    match /matches/{matchId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null && isAdmin();
      allow delete: if isAdmin();
    }
    
    // Head to Head records
    match /headToHead/{recordId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Friend requests
    match /friendRequests/{requestId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && 
                      request.resource.data.fromUserId == request.auth.uid;
      allow update: if request.auth != null && 
                      (resource.data.fromUserId == request.auth.uid || 
                       resource.data.toUserId == request.auth.uid);
      allow delete: if request.auth != null && 
                      (resource.data.fromUserId == request.auth.uid || 
                       resource.data.toUserId == request.auth.uid);
    }
    
    // Sessions collection (for multi-login prevention)
    match /sessions/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Admin logs (optional - for tracking admin actions)
    match /adminLogs/{logId} {
      allow read: if isAdmin();
      allow create: if isAdmin();
    }
    
    // Admins collection
    match /admins/{adminId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
  }
}
